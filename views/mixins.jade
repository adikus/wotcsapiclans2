mixin loaderThread(key, thread, name)
    .col-sm-3
        .panel.panel-default
            .panel-heading
                h3!= name
                    small= ' ' + thread.cycleData.totalClans + ' clans'
            .list-group.condensed
                .list-group-item
                    .badge(id=key+'_current_speed')= thread.speeds.currentSpeed + ' clans/s'
                    | Current speed *
                .list-group-item
                    .badge(id=key+'_current_duration')= thread.speeds.duration + ' ms'
                    | Current request duration *
                .list-group-item
                    .badge(id=key+'_completion')= thread.cycleTimes.completion + ' %'
                    | Cycle completion
                .list-group-item
                    .badge(id=key+'_error_rate')= thread.cycleData.errorRate + ' %'
                    | Error rate
                if thread.config
                    .list-group-item
                        input.badge.editable(id=key+'_max_active_requests',value=thread.config.maxActiveRequests,type='text')
                        | Max active requests
                    .list-group-item
                        input.badge.editable(id=key+'_clans_in_request',value=thread.config.clansInRequest,type='text')
                        | Clans in request
                    .list-group-item
                        input.badge.editable(id=key+'_wait_multiplier',value=thread.config.waitMultiplier,type='text')
                        | Wait multiplier
                    .list-group-item
                        button.btn.btn-primary.pull-right(id=key+'_config_submit') Save
                        button.btn.btn-danger(id=key+'_start_stop',class=thread.paused?'paused':'')= thread.paused ? 'Start':'Stop'
        .progress(id=key+'_progress')
            .progress-bar(role='progress_bar',style='width:'+thread.cycleTimes.completion+'%')

        .panel.panel-default
            .panel-heading
                h4 List of requests
            .list-group.condensed(id=key+'_request_list')