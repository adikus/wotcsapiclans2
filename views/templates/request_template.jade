block request_template
    .list-group-item(class=req.duration?'finished':'active',id='req_'+ID)
        if req.duration
            .badge= req.duration + ' ms'
        else
            .badge= (new Date()).getTime() - req.start.getTime() + ' ms'
        b= '#'+ID
        i= ' - ' + req.count + ' clans'
        -minutes = req.start.getMinutes().toString();
        -seconds = req.start.getSeconds().toString();
        -minutesString = '00'.slice(0,minutes.length-2)+minutes;
        -secondsString = '00'.slice(0,seconds.length-2)+seconds;
        small= ' (Start: ' + req.start.getHours() + ':' + minutesString + ':' + secondsString +')'